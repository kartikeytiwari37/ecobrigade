  <body>
    	 <%- include("./partials/navbar") %>  
	  <section class="user">
	  <div class="profile-main">
		<div class="profile-header">
			<div class="user-detail">
				<div class="user-image">
					<img src="https://source.unsplash.com/S1g3C9xVgVs">
				</div>
				<div class="user-data">
					<h2><%= user.name %></h2>
					<span class="post-label"><%= user.gender %></span>
					
					<p><strong><%= user.address %></strong><br>
					
				</div>
			
			</div>
			<div class="tab-panel-main mt-5">
				<ul class="tabs">
					<li class="tab-link current" data-tab="Basic-detail">Bookings</li>
					<li class="tab-link" data-tab="Edu-detail">Basic Detail</li>
					
				</ul>
				<div id="Basic-detail" class="tab-content current">
					<ul class="tilesWrap">
	<%var i=0%>					
	<% books.forEach(function(book) { %>					
	<li>
		
		<h2>0<%=1+i%></h2>
		<%i=i+1%>
		<h3>Request Pending</h3>
		<p>
			<%= book.message %>
		</p>
		<form  action="/users/<%=book._id%>?_method=DELETE" method="POST">
		<button >Delete</button>
		</form>
	</li>
						<% }); %>
	
</ul>
				</div>
				<div id="Edu-detail" class="tab-content">
					      <section id="settings" class="hidden">
        
        
        <p class="setting"><span>E-mail Address <img src="https://res.cloudinary.com/ktiwaribe17/image/upload/v1589565018/edit_uldqfw.png" alt="*Edit*"></span> <%= user.email %></p>
        
        <p class="setting"><span>Name <img src="https://res.cloudinary.com/ktiwaribe17/image/upload/v1589565018/edit_uldqfw.png" alt="*Edit*"></span> <%= user.name %></p>
        
        <p class="setting"><span>Gender<img src="https://res.cloudinary.com/ktiwaribe17/image/upload/v1589565018/edit_uldqfw.png" alt="*Edit*"></span><%= user.gender %></p>
        
        <p class="setting"><span>Contact No.<img src="https://res.cloudinary.com/ktiwaribe17/image/upload/v1589565018/edit_uldqfw.png" alt="*Edit*"></span> <%= user.number%></p>
        
        <p class="setting"><span>Address<img src="https://res.cloudinary.com/ktiwaribe17/image/upload/v1589565018/edit_uldqfw.png" alt="*Edit*"></span><%= user.address %></p>
      </section>
				</div>
			
			</div>
		</div>
		
<script type="text/javascript">
	$(document).ready(function(){
		$('ul.tabs li').click(function(){
			var tab_id = $(this).attr('data-tab');

			$('ul.tabs li').removeClass('current');
			$('.tab-content').removeClass('current');

			$(this).addClass('current');
			$("#"+tab_id).addClass('current');
		});
	});
</script>
